<h1>Resultado da Busca por: <%= @code %></h1>

<% if @orders.present? %>
  <p><%= @orders.count %> <%= Order.model_name.human(count: @orders.count).downcase %> <%= t(:found, count: @orders.count) %></p>
  <% @orders.each do |order| %>
    <%= render order %>
  <% end %>
<% else %>
  <p>Nenhum pedido encotrado.</p>
<% end %>
